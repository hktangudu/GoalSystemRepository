<script type="text/javascript">
  function RegisterMouseincolorFunction(){
  var btn = document.getElementById("form").reg;
  
    btn.style.background = "lightblue";
  }
  function RegisterMouseOutColorFunction()
  {
    var btn = document.getElementById("form").reg;
    btn.style.background = "Transparent";
  }
</script>
